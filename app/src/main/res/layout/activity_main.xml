<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:visibility="invisible"
        android:layout_width="@dimen/big_image_width"
        android:layout_height="@dimen/big_image_width"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageViewBig" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/big_image_width"
        android:layout_height="@dimen/big_image_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imagesLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:padding="2dp"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_height" />

            <ImageView
                android:id="@+id/imageView2"
                android:padding="2dp"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_height"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:padding="2dp"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_height" />

            <ImageView
                android:id="@+id/imageView4"
                android:padding="2dp"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_height" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imagesLayout"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:id="@+id/button1"
                android:onClick="tagSelected" />

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:id="@+id/button2"
                android:onClick="tagSelected" />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:id="@+id/button3"
                android:onClick="tagSelected" />

            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:id="@+id/button4"
                android:onClick="tagSelected" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
